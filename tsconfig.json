{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
    },
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "target": "ESNext",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/helpers/tests/.keep.js"]
}
